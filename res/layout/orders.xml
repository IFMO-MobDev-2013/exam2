<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/textview_bg">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textSize="25dp"
            android:gravity="center_vertical|center_horizontal" android:textStyle="bold|italic"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/listView" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="@string/addpizza"
            android:id="@+id/button" android:onClick="addPizza"
            android:background="@drawable/list" android:textSize="22dp" android:gravity="center_vertical|center_horizontal"/>
</LinearLayout>