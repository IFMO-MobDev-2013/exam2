<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Введите название пиццы : "
            android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_auto_model" android:layout_gravity="center" android:layout_marginTop="5dp"
            android:hint="Калифорния"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Введите телефонный номер клиента : "
            android:id="@+id/textView" android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_telephone_number" android:layout_gravity="center" android:layout_marginTop="5dp"
            android:hint="+79113334455"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Выберите предполагаемую скорость заказа : "
            android:id="@+id/textView_speed" android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_speed" android:gravity="right"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Выберите время доставки : "
            android:id="@+id/textView_time" android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_time" android:gravity="right"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Курьер №   --"
            android:id="@+id/textViewBox" android:layout_marginTop="10dp" android:singleLine="false"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Добавить"
            android:id="@+id/buttonAdd" android:layout_marginTop="20dp"/>

</LinearLayout>